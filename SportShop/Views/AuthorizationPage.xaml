<Page x:Class="SportShop.Views.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SportShop.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Вход" Background="White">

    <Grid>
        <StackPanel VerticalAlignment="Center"
                    
                    HorizontalAlignment="Center">

            <TextBlock Style="{StaticResource CommonBlock}" Text="Логин" />
            <TextBox Style="{StaticResource CommonTextBox}" Name="TBLogin"/>
            <TextBlock Style="{StaticResource CommonBlock}" Text="Пароль"/>
            <PasswordBox Style="{StaticResource CommonPasswordBox}" Name="TBPassword"/>
            <StackPanel Orientation="Vertical">
                <Button Click="BtnSignIn_Click"
                        Content="Войти"
                        Style="{StaticResource CommonButton}"/>

                <Button Click="BtnSignInAsGuest_Click"
                        Content="Войти как гость"
                        Style="{StaticResource CommonButton}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
