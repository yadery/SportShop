<Page x:Class="SportShop.Views.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SportShop.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage" Background="AntiqueWhite">

    <Grid>
        <StackPanel VerticalAlignment="Center"
                    
                    HorizontalAlignment="Center">

            <TextBlock Text="Логин" />
            <TextBox Name="TBLogin"/>
            <TextBlock Text="Пароль"/>
            <PasswordBox Name="TBPassword"/>
            <StackPanel Orientation="Horizontal">
                <Button Click="BtnSignIn_Click"
                        Content="Войти"/>

                <Button Click="BtnSignInAsGuest_Click"
                        Content="Войти как гость"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
