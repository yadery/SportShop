<Page x:Class="SportShop.Views.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SportShop.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductPage" Background="AntiqueWhite">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Products"/>

        <ListView Grid.Row="1" Name="LWProducts" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <TextBlock FontSize="14" TextAlignment="Center" Text="{Binding Article}"/>
                        <TextBlock FontSize="14" TextAlignment="Center" Text="{Binding ProductName}"/>
                        <TextBlock FontSize="14" TextAlignment="Center" Text="{Binding Description}"/>
                        <TextBlock FontSize="14" TextAlignment="Center" Text="{Binding Categories.CategoryName}"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
